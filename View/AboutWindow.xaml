<Window x:Class="DeafDirectionalHelper.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About DeafDirectionalHelper"
        Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="DeafDirectionalHelper"
                   FontSize="24" FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1"
                   x:Name="VersionText"
                   Text="Version 1.0.0"
                   FontSize="14"
                   Foreground="#AAAAAA"
                   HorizontalAlignment="Center"
                   Margin="0,5,0,10"/>

        <TextBlock Grid.Row="2"
                   Text="Audio visualization tool for deaf and hard-of-hearing gamers"
                   FontSize="12"
                   Foreground="#CCCCCC"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0">
            <Hyperlink x:Name="GitHubLink"
                       NavigateUri="https://github.com/wellforce-brandon/DeafDirectionalHelper"
                       RequestNavigate="GitHubLink_RequestNavigate"
                       Foreground="#6CA0DC">
                View on GitHub
            </Hyperlink>
        </TextBlock>

        <Button Grid.Row="4"
                Content="OK"
                Width="80" Height="28"
                HorizontalAlignment="Center"
                Click="OkButton_Click"
                Background="#3E3E3E"
                Foreground="White"
                BorderBrush="#555"/>
    </Grid>
</Window>
